{
	"files.exclude": {
		"**/__pycache__": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/env": false,
		"**/node_modules": true,
		"**/.idea/": true,
		"whoosh_index": true,
	},
	"search.exclude": {
		"TEMP/": true,
	},
	/****todo-tree****/
	"todo-tree.filtering.excludeGlobs": [
		"**/env/**",
		"**/node_modules",
		"**/README.md",
		"**/scripts/coverage",
		"**/jquery-3.6.0.js",
		"bootstrap.bundle.min.js.map",
		"**/apps/blog/static/blog/js/highlight.js",
	],
	"todo-tree.general.tags": [
		"TODO",
		"FIXME",
		"BUG",
		// "NOTE",
	],
	/****liveSassCompile****/
	"liveSassCompile.settings.formats": [
		{
			"extensionName": ".css",
			"format": "compressed",
		}
	],
	"liveSassCompile.settings.generateMap": false,
	/***VSCode Counter***/
	"VSCodeCounter.useGitignore": true,
	"VSCodeCounter.outputPreviewType": "markdown",
	"VSCodeCounter.history": 2,
	/****GithubCopilot****/
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": false,
		"markdown": true,
	},
}